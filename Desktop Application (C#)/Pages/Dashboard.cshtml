            // Initialize data arrays
            for (let i = 0; i < period; i++) {
                const currentDate = new Date(startDate.getTime() + i * 24 * 60 * 60 * 1000);
                
                let labelText = '';
                if (period <= 7) {
                    labelText = currentDate.toLocaleDateString('en-US', { weekday: 'short' });
                } else if (period <= 30) {
                    labelText = currentDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                } else {
                    // For 90 days, show every 7th day
                    if (i % 7 === 0 || i === period - 1) {
                        labelText = currentDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                    } else {
                        labelText = ''; // Empty label for intermediate days
                    }
