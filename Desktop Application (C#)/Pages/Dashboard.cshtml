@page
@model Wilproject.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />

<!-- Antiforgery Token -->
@Html.AntiForgeryToken()

<!-- Dashboard Header -->
<div class="dashboard-header">
    <div class="dashboard-welcome">
        <h1 class="dashboard-title" id="dashboard-greeting">Good Day!</h1>
        <p class="dashboard-subtitle" id="dashboard-user-greeting">Welcome back to your dashboard</p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="stats-grid">
    <div class="stat-card primary">
        <div class="stat-icon primary">
            <i class="fas fa-project-diagram"></i>
        </div>
        <div class="stat-number" id="active-projects-count">@Model.Stats.ActiveProjects</div>
        <div class="stat-label">Active Projects</div>
    </div>
    
    <div class="stat-card success">
        <div class="stat-icon success">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="stat-number" id="completed-tasks-count">@Model.Stats.CompletedTasks</div>
        <div class="stat-label">Completed Tasks</div>
    </div>
    
    <div class="stat-card warning">
        <div class="stat-icon warning">
            <i class="fas fa-users"></i>
        </div>
        <div class="stat-number" id="team-members-count">@Model.Stats.TeamMembers</div>
        <div class="stat-label">Team Members</div>
    </div>
    
    <div class="stat-card info">
        <div class="stat-icon info">
            <i class="fas fa-calendar-check"></i>
        </div>
        <div class="stat-number" id="upcoming-events-count">@Model.Stats.UpcomingEvents</div>
        <div class="stat-label">Upcoming Events</div>
    </div>
</div>

<!-- Quick Actions -->
<div class="quick-actions-section mb-4">
    <div class="row">
        <div class="col-md-3">
            <a href="/Projects" class="quick-action-card">
                <div class="quick-action-icon">
                    <i class="fas fa-plus-circle"></i>
                </div>
                <div class="quick-action-content">
                    <h6>New Project</h6>
                    <p>Start a new project</p>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="/Tasks" class="quick-action-card">
                <div class="quick-action-icon">
                    <i class="fas fa-tasks"></i>
                </div>
                <div class="quick-action-content">
                    <h6>Add Task</h6>
                    <p>Create a new task</p>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="/Calendar" class="quick-action-card">
                <div class="quick-action-icon">
                    <i class="fas fa-calendar-plus"></i>
                </div>
                <div class="quick-action-content">
                    <h6>Schedule Event</h6>
                    <p>Add to calendar</p>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="/Messages" class="quick-action-card">
                <div class="quick-action-icon">
                    <i class="fas fa-comments"></i>
                </div>
                <div class="quick-action-content">
                    <h6>Send Message</h6>
                    <p>Team communication</p>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Charts Section -->
<div class="chart-grid">
    <div class="chart-card">
        <div class="chart-header">
            <h3 class="chart-title">Project Progress Overview</h3>
            <div class="chart-actions">
                <button class="btn-chart active" data-period="7">7D</button>
                <button class="btn-chart" data-period="30">30D</button>
                <button class="btn-chart" data-period="90">90D</button>
                <button class="btn-refresh" onclick="refreshDashboard()" title="Refresh Data">
                    <i class="fas fa-sync-alt"></i>
                </button>
            </div>
        </div>
        <div class="chart-container">
            <canvas id="projectProgressChart"></canvas>
        </div>
    </div>
    
    <div class="chart-card">
        <div class="chart-header">
            <h3 class="chart-title">Task Distribution</h3>
            <div class="chart-actions">
                <select class="chart-view-selector" id="chartViewSelector">
                    <option value="tasks">Task Distribution</option>
                    <option value="projects">Project Status</option>
                </select>
            </div>
        </div>
        <div class="chart-container">
            <canvas id="taskDistributionChart"></canvas>
        </div>
    </div>
</div>

<!-- Activity Feed -->
<div class="activity-feed">
    <div class="activity-card">
        <div class="activity-card-header">
            <h3 class="chart-title mb-0">Recent Activity</h3>
            <button class="btn-collapse" onclick="toggleActivityCollapse()" id="activityCollapseBtn" title="Toggle Activity">
                <i class="fas fa-chevron-up"></i>
            </button>
        </div>
        <div id="recent-activities-wrapper" class="activity-content-wrapper">
            <div id="recent-activities">
                @if (Model.RecentActivities.Any())
                {
                    @foreach (var activity in Model.RecentActivities)
                    {
                        <div class="activity-item">
                            <div class="activity-icon" style="background: @activity.BackgroundColor; color: white;">
                                <i class="@activity.Icon"></i>
                            </div>
                            <div class="activity-content">
                                <h6>@activity.Title</h6>
                                <p>@activity.Description</p>
                                <span class="activity-time">@activity.TimeAgo</span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-icon">
                            <i class="fas fa-history"></i>
                        </div>
                        <h5>No Recent Activity</h5>
                        <p>Your recent activities will appear here as you use the system.</p>
                        <button class="btn-modern btn-primary" onclick="goToProjects()">
                            <i class="fas fa-plus"></i> Start Your First Project
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <!-- Calendar Widget -->
    <div class="activity-card">
        <div class="activity-card-header">
            <h3 class="chart-title mb-0">Calendar</h3>
            <div class="d-flex gap-2">
                <button class="btn-modern btn-sm" onclick="goToCalendar()" style="padding: 0.5rem 0.875rem; font-size: 0.8rem;">
                    <i class="fas fa-external-link-alt"></i> Full View
                </button>
                <button class="btn-collapse" onclick="toggleCalendarCollapse()" id="calendarCollapseBtn" title="Toggle Calendar">
                    <i class="fas fa-chevron-up"></i>
                </button>
            </div>
        </div>
        <div id="calendar-wrapper" class="calendar-content-wrapper">
            <div id="dashboard-calendar">
                <div class="calendar-mini">
                    <div class="calendar-header">
                        <button class="calendar-nav" onclick="previousMonth()" title="Previous Month">
                            <i class="fas fa-chevron-left"></i>
                        </button>
                        <span class="calendar-title" id="calendarTitle">January 2024</span>
                        <button class="calendar-nav" onclick="nextMonth()" title="Next Month">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                    <div class="calendar-grid">
                        <div class="calendar-weekdays">
                            <div class="weekday">S</div>
                            <div class="weekday">M</div>
                            <div class="weekday">T</div>
                            <div class="weekday">W</div>
                            <div class="weekday">T</div>
                            <div class="weekday">F</div>
                            <div class="weekday">S</div>
                        </div>
                        <div class="calendar-days" id="calendarDays">
                            <!-- Calendar days will be generated by JavaScript -->
                        </div>
                    </div>
                </div>
                <div class="calendar-events" id="calendarEvents" onclick="goToCalendar()">
                    <h6>Upcoming Events</h6>
                    <div class="events-list" id="eventsList">
                        <div class="empty-events" id="emptyEventsMessage">
                            <i class="fas fa-calendar-check"></i>
                            <span>Loading events...</span>
                        </div>
                    </div>
                    <div class="calendar-footer-hint">
                        <i class="fas fa-external-link-alt"></i>
                        <span>Click to view full calendar</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        console.log('📊 Dashboard script starting...');
        
        var currentUser = null;
        var dashboardData = @Html.Raw(Json.Serialize(new { stats = Model.Stats, chartData = Model.ChartData }));
        var projectProgressChart = null;
        var taskDistributionChart = null;
        var currentPeriod = 7; // Default to 7 days
        var chartViewMode = 'tasks'; // Default to task view
        
        // Calendar state
        var currentCalendarDate = new Date();
        var calendarEvents = [];
        var recentActivities = [];
        
        // Data caches for charts
        var projectsData = [];
        var tasksData = [];
        var eventsData = [];
        var chartsInitialized = false;
        var dataLoaded = false;
        
        // Wait for global Firebase to be ready
        function waitForDashboardFirebase(callback) {
            if (window.firebaseAuth) {
                callback();
            } else {
                setTimeout(function() { waitForDashboardFirebase(callback); }, 100);
            }
        }
        
        // Setup dashboard-specific functionality
        function setupDashboard() {
            console.log('📊 Setting up dashboard');
            
            if (!window.firebaseAuth) {
                console.error('❌ Firebase auth not available in dashboard');
                return;
            }
            
            // Authentication check for dashboard
            window.firebaseAuth.onAuthStateChanged(function(user) {
                if (!user) {
                    console.log('❌ No user in dashboard, redirecting');
                    window.location.href = '/';
                } else {
                    currentUser = user;
                    updateDashboardGreeting(user);
                    
                    // Initialize charts first, then load data
                    initializeCharts().then(() => {
                        console.log('📊 Charts initialized, now loading data...');
                        return loadFirebaseData();
                    }).then(() => {
                        console.log('📊 Data loaded, updating charts...');
                        updateChartsWithRealData(projectsData, tasksData, []);
                    });
                    
                    setupActivityTracking();
                    setupChartControls();
                    console.log('✅ Dashboard user set:', user.email);
                }
            });
        }
        
        // Update dashboard greeting
        function updateDashboardGreeting(user) {
            const greetingEl = document.getElementById('dashboard-greeting');
            const subGreetingEl = document.getElementById('dashboard-user-greeting');
            
            if (user) {
                const displayName = user.displayName || user.email || 'User';
                const emailSymbol = String.fromCharCode(64);
                const atIndex = displayName.indexOf(emailSymbol);
                const name = atIndex > -1 ? displayName.substring(0, atIndex) : displayName;
                
                const hour = new Date().getHours();
                let greeting = 'Good Evening';
                if (hour < 12) greeting = 'Good Morning';
                else if (hour < 18) greeting = 'Good Afternoon';
                
                if (greetingEl) {
                    greetingEl.textContent = `${greeting}, ${name}!`;
                }
                
                if (subGreetingEl) {
                    subGreetingEl.textContent = `Welcome back to your dashboard`;
                }
            }
        }
        
        // Load Firebase data
        async function loadFirebaseData() {
            if (!window.firebaseDB || !currentUser) {
                console.log('📊 Firebase DB or user not available yet');
                return;
            }
            
            try {
                console.log('📊 Loading real Firebase data...');
                
                // Load projects - try user-specific first to avoid permission errors
                let projectsSnapshot;
                try {
                    // Try to load all projects first (for company view)
                    projectsSnapshot = await window.firebaseDB.collection('projects').get();
                    console.log('📊 Loaded all company projects successfully');
                } catch (permissionError) {
                    console.log('📊 Company-wide access denied, loading user projects only:', permissionError.message);
                    // Fallback to user-specific projects
                    projectsSnapshot = await window.firebaseDB.collection('projects')
                        .where('userId', '==', currentUser.uid)
                        .get();
                    console.log('📊 Loaded user projects only');
                }
                
                // Load tasks - try user-specific to avoid permission issues
                let tasksSnapshot;
                try {
                    tasksSnapshot = await window.firebaseDB.collection('tasks')
                        .where('uid', '==', currentUser.uid)
                        .get();
                    console.log('📊 Tasks loaded successfully:', tasksSnapshot.docs.length);
                } catch (taskError) {
                    console.log('📊 Tasks access error:', taskError.message);
                    // Create empty snapshot if tasks fail
                    tasksSnapshot = { docs: [] };
                }
                
                // Load events - user-specific - ENHANCED EVENT LOADING TO UNIVERSAL
                let eventsSnapshot;
                try {
                    console.log('📊 Loading ALL company calendar events...');
                    // Load ALL events for universal calendar widget
                    eventsSnapshot = await window.firebaseDB.collection('events').get();
                    console.log('📊 Company events loaded successfully:', eventsSnapshot.docs.length);
                } catch (eventError) {
                    console.log('📊 Company events access error, loading user events only:', eventError.message);
                    // Fallback to user-specific events if permissions don't allow
                    try {
                        eventsSnapshot = await window.firebaseDB.collection('events')
                            .where('userId', '==', currentUser.uid)
                            .get();
                        console.log('📊 User events loaded as fallback:', eventsSnapshot.docs.length);
                    } catch (userEventError) {
                        console.log('📊 User events also failed:', userEventError.message);
                        eventsSnapshot = { docs: [] };
                    }
                }
                
                // Load team members count
                let teamMembersCount = 1; // At least current user
                try {
                    console.log('📊 Counting team members...');
                    
                    // Try to get all users who have created projects (indicating active team members)
                    const allProjectsSnapshot = await window.firebaseDB.collection('projects').get();
                    const uniqueUserIds = new Set();
                    
                    allProjectsSnapshot.docs.forEach(doc => {
                        const project = doc.data();
                        if (project.userId) {
                            uniqueUserIds.add(project.userId);
                        }
                    });
                    
                    // Also count users who have created tasks
                    const allTasksSnapshot = await window.firebaseDB.collection('tasks').get();
                    allTasksSnapshot.docs.forEach(doc => {
                        const task = doc.data();
                        if (task.uid) {
                            uniqueUserIds.add(task.uid);
                        }
                    });
                    
                    // Also count users who have created events
                    const allEventsSnapshot = await window.firebaseDB.collection('events').get();
                    allEventsSnapshot.docs.forEach(doc => {
                        const event = doc.data();
                        if (event.userId) {
                            uniqueUserIds.add(event.userId);
                        }
                    });
                    
                    teamMembersCount = uniqueUserIds.size;
                    console.log(`📊 Found ${teamMembersCount} active team members:`, Array.from(uniqueUserIds));
                    
                } catch (teamError) {
                    console.log('📊 Team members access limited, showing current user only:', teamError.message);
                    teamMembersCount = 1; // Fallback to current user only
                }
                
                console.log('📊 Firebase data loaded:', {
                    projects: projectsSnapshot.docs?.length || 0,
                    tasks: tasksSnapshot.docs?.length || 0,
                    events: eventsSnapshot.docs?.length || 0,
                    teamMembers: teamMembersCount
                });
                
                // Process data and store globally
                projectsData = projectsSnapshot.docs?.map(doc => ({id: doc.id, ...doc.data()})) || [];
                tasksData = tasksSnapshot.docs?.map(doc => ({id: doc.id, ...doc.data()})) || [];
                eventsData = eventsSnapshot.docs?.map(doc => ({id: doc.id, ...doc.data()})) || [];
                
                console.log('📊 Processed data:', {
                    projectsData: projectsData.length,
                    tasksData: tasksData.length,
                    eventsData: eventsData.length
                });
                
                // Log task data for debugging
                if (tasksData.length > 0) {
                    console.log('📊 Task status breakdown:', tasksData.map(t => ({ name: t.name, status: t.status })));
                }
                
                // Log event data for debugging
                if (eventsData.length > 0) {
                    console.log('📊 Events breakdown:', eventsData.map(e => ({ 
                        title: e.title, 
                        start: e.start,
                        startDate: new Date(e.start),
                        isUpcoming: new Date(e.start) > new Date()
                    })));
                }
                
                // Calculate real stats
                const activeProjects = projectsData.filter(p => {
                    const status = p.status?.toLowerCase();
                    return status !== 'completed' && status !== 'complete' && status !== 'done';
                });
                
                const completedProjects = projectsData.filter(p => {
                    const status = p.status?.toLowerCase();
                    return status === 'completed' || status === 'complete' || status === 'done';
                });
                
                const completedTasks = tasksData.filter(t => {
                    const status = t.status?.toLowerCase();
                    return status === 'done' || status === 'completed' || status === 'complete';
                });
                
                // Filter upcoming events - ENHANCED LOGIC
                const now = new Date();
                const thirtyDaysFromNow = new Date(now.getTime() + (30 * 24 * 60 * 60 * 1000));
                
                const upcomingEvents = eventsData.filter(e => {
                    if (!e.start) {
                        console.log('📊 Event missing start date:', e);
                        return false;
                    }
                    
                    const eventStart = new Date(e.start);
                    const eventEnd = e.end ? new Date(e.end) : new Date(eventStart.getTime() + (60 * 60 * 1000)); // Default 1 hour if no end time
                    
                    // Include events that:
                    // 1. Are happening right now (start <= now <= end)
                    // 2. Will happen in the next 30 days
                    const isHappeningNow = eventStart <= now && now <= eventEnd;
                    const isUpcoming = eventStart > now && eventStart <= thirtyDaysFromNow;
                    
                    const isIncluded = isHappeningNow || isUpcoming;
                    
                    if (isIncluded) {
                        console.log('📊 Including event:', {
                            title: e.title,
                            start: e.start,
                            eventStart: eventStart.toLocaleString(),
                            isHappeningNow,
                            isUpcoming
                        });
                    }
                    
                    return isIncluded;
                });
                
                console.log('📊 Calculated stats:', {
                    activeProjects: activeProjects.length,
                    completedProjects: completedProjects.length,
                    completedTasks: completedTasks.length,
                    totalTasks: tasksData.length,
                    upcomingEvents: upcomingEvents.length,
                    teamMembers: teamMembersCount
                });
                
                // Update UI with real data
                updateStatsUI({
                    activeProjects: activeProjects.length,
                    completedTasks: completedTasks.length,
                    teamMembers: teamMembersCount,
                    upcomingEvents: upcomingEvents.length
                });
                
                // UPDATE CALENDAR WIDGET WITH EVENTS
                updateCalendarWidget(eventsData, upcomingEvents);
                
                // UPDATE RECENT ACTIVITY - NEW
                updateRecentActivity(projectsData, tasksData, eventsData);
                
                dataLoaded = true;
                
                // IMMEDIATELY UPDATE DONUT CHART AFTER DATA LOADS
                if (chartsInitialized && taskDistributionChart) {
                    console.log('📊 IMMEDIATELY updating donut chart with loaded data...');
                    
                    // Force immediate donut chart update
                    setTimeout(() => {
                        forceDonutChartUpdate(tasksData, projectsData);
                    }, 100);
                    
                    // Additional update after short delay
                    setTimeout(() => {
                        forceDonutChartUpdate(tasksData, projectsData);
                    }, 500);
                }
                
                console.log('✅ Real Firebase data loaded successfully');
                
            } catch (error) {
                console.error('❌ Error loading Firebase data:', error);
                
                // If there's an error, show zeros instead of sample data
                updateStatsUI({
                    activeProjects: 0,
                    completedTasks: 0,
                    teamMembers: 1, // At least current user
                    upcomingEvents: 0
                });
            }
        }
        
        // NEW: Update calendar widget function
        function updateCalendarWidget(allEvents, upcomingEvents) {
            console.log('📅 Updating calendar widget...');
            console.log('📅 All events:', allEvents.length);
            console.log('📅 Upcoming events:', upcomingEvents.length);
            
            // Update calendar title with current month/year
            const now = new Date();
            const monthNames = ['January', 'February', 'March', 'April', 'May', 'June',
                'July', 'August', 'September', 'October', 'November', 'December'];
            const currentMonth = monthNames[now.getMonth()];
            const currentYear = now.getFullYear();
            
            const calendarTitleEl = document.getElementById('calendarTitle');
            if (calendarTitleEl) {
                calendarTitleEl.textContent = `${currentMonth} ${currentYear}`;
            }
            
            // Generate calendar days
            generateCalendarDays(now, allEvents);
            
            // Update upcoming events list
            updateUpcomingEventsList(upcomingEvents);
            
            console.log('📅 Calendar widget updated successfully');
        }
        
        // Generate calendar days
        function generateCalendarDays(currentDate, events) {
            const calendarDaysEl = document.getElementById('calendarDays');
            if (!calendarDaysEl) return;
            
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();
            
            // Get first day of month and number of days
            const firstDay = new Date(year, month, 1);
            const lastDay = new Date(year, month + 1, 0);
            const daysInMonth = lastDay.getDate();
            const startingDayOfWeek = firstDay.getDay();
            
            // Clear existing days
            calendarDaysEl.innerHTML = '';
            
            // Add empty cells for days before month starts
            for (let i = 0; i < startingDayOfWeek; i++) {
                const emptyDay = document.createElement('div');
                emptyDay.className = 'calendar-day empty';
                calendarDaysEl.appendChild(emptyDay);
            }
            
            // Add days of the month
            for (let day = 1; day <= daysInMonth; day++) {
                const dayEl = document.createElement('div');
                dayEl.className = 'calendar-day';
                dayEl.textContent = day;
                
                // Check if this day has events
                const dayDate = new Date(year, month, day);
                const dayEvents = events.filter(event => {
                    const eventDate = new Date(event.start);
                    return eventDate.getFullYear() === year && 
                           eventDate.getMonth() === month && 
                           eventDate.getDate() === day;
                });
                
                if (dayEvents.length > 0) {
                    dayEl.classList.add('has-events');
                    dayEl.title = `${dayEvents.length} event${dayEvents.length > 1 ? 's' : ''}`;
                }
                
                // Highlight today
                const today = new Date();
                if (dayDate.toDateString() === today.toDateString()) {
                    dayEl.classList.add('today');
                }
                
                calendarDaysEl.appendChild(dayEl);
            }
        }
        
        // Update upcoming events list
        function updateUpcomingEventsList(upcomingEvents) {
            const eventsListEl = document.getElementById('eventsList');
            if (!eventsListEl) return;
            
            console.log('📅 Updating events list with:', upcomingEvents.length, 'events');
            
            if (upcomingEvents.length === 0) {
                eventsListEl.innerHTML = `
                    <div class="empty-events">
                        <i class="fas fa-calendar-check"></i>
                        <span>No upcoming events</span>
                    </div>
                `;
                return;
            }
            
            // Sort events by start date
            const sortedEvents = upcomingEvents.sort((a, b) => {
                return new Date(a.start) - new Date(b.start);
            });
            
            // Show up to 3 upcoming events
            const eventsToShow = sortedEvents.slice(0, 3);
            
            let eventsHtml = '';
            eventsToShow.forEach(event => {
                const eventDate = new Date(event.start);
                const now = new Date();
                
                // Check if this is the user's event or a team event
                const isMyEvent = currentUser && event.userId === currentUser.uid;
                var atSymbol = String.fromCharCode(64);
                
                // Get author name with better fallback logic
                let authorName = 'Team Member';
                if (event.authorName) {
                    authorName = event.authorName;
                } else if (event.authorEmail) {
                    var emailParts = event.authorEmail.split(atSymbol);
                    authorName = emailParts[0];
                }
                
                // Calculate time until event
                let timeText = '';
                const timeDiff = eventDate - now;
                const daysDiff = Math.ceil(timeDiff / (1000 * 60 * 60 * 24));
                
                if (timeDiff < 0) {
                    // Event is happening now or recently started
                    timeText = 'Happening now';
                } else if (daysDiff === 0) {
                    timeText = 'Today';
                } else if (daysDiff === 1) {
                    timeText = 'Tomorrow';
                } else if (daysDiff <= 7) {
                    timeText = `In ${daysDiff} days`;
                } else {
                    timeText = eventDate.toLocaleDateString();
                }
                
                const eventTime = eventDate.toLocaleTimeString('en-US', {hour: '2-digit', minute:'2-digit', hour12: true});
                
                // Add visual indicator for my events vs team events
                const eventClass = isMyEvent ? 'my-event' : 'team-event';
                const eventIcon = isMyEvent ? '✓' : '👥';
                const eventAuthor = isMyEvent ? 'You' : authorName;
                
                eventsHtml += `
                    <div class="event-item ${eventClass}">
                        <div class="event-dot ${getPriorityClass(event.priority)}"></div>
                        <div class="event-info">
                            <div class="event-title">
                                ${eventIcon} ${escapeHtml(event.title)}
                            </div>
                            <div class="event-time">
                                ${timeText}${!event.allDay ? ` at ${eventTime}` : ''} • ${eventAuthor}
                            </div>
                        </div>
                    </div>
                `;
            });
            
            // If there are more events, show count
            if (upcomingEvents.length > 3) {
                eventsHtml += `
                    <div class="more-events">
                        <a href="/Calendar" class="text-decoration-none">
                            <i class="fas fa-plus"></i> ${upcomingEvents.length - 3} more company events
                        </a>
                    </div>
                `;
