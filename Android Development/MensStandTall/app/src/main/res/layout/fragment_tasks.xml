<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ui.tasks.TasksFragment">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/task_board" />

            <Button
                android:id="@+id/btnAddTask"
                style="@style/AddTaskButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/btnViewAll"
                android:layout_marginEnd="8dp"
                android:text="@string/add_task" />

            <Button
                android:id="@+id/btnViewAll"
                style="@style/ViewAllButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="View All" />
        </RelativeLayout>

        <TextView
            style="@style/SubtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Organize and track your tasks with our modern Kanban board" />
    </LinearLayout>

    <!-- Stats -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:baselineAligned="false">

        <!-- To Do Stats -->
        <include layout="@layout/item_statistic" android:id="@+id/stat_to_do" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="8dp"/>
        <!-- In Progress Stats -->
        <include layout="@layout/item_statistic" android:id="@+id/stat_in_progress" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
        <!-- Completed Stats -->
        <include layout="@layout/item_statistic" android:id="@+id/stat_completed" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
        <!-- Total Stats -->
        <include layout="@layout/item_statistic" android:id="@+id/stat_total" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Kanban Board -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <!-- To Do Column -->
            <include layout="@layout/item_kanban_column" android:id="@+id/col_to_do" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="8dp"/>
            <!-- In Progress Column -->
            <include layout="@layout/item_kanban_column" android:id="@+id/col_in_progress" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
            <!-- Completed Column -->
            <include layout="@layout/item_kanban_column" android:id="@+id/col_completed" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="8dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>