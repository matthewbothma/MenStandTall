<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFDD99"/> <!-- Warm yellow-orange -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#FFAA33"/> <!-- Slightly darker border -->

    <!-- Rounded corners -->
    <corners android:radius="8dp"/>

    <!-- Optional padding inside -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
